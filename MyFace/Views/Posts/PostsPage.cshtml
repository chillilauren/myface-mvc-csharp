@model MyFace.Models.View.PostsViewModel

@{
    Layout = "_Layout";
}

<h1>Posts</h1>

<section>
    <ol class="posts-list">
        @foreach (var post in Model.Posts)
        {
            <li class="post">
                <img src="@post.ImageUrl" alt="post image" class="post-image"/>
                <div class="post-content">
                    <div class="post-user">@post.PostedBy.DisplayName</div>
                    <p class="post-message">@post.Message</p>
                </div>
            </li>
        }
    </ol>
</section>

<section class="pg-btns">
    @if (Model.CurrentPageNumber > 1)
    {
        <a class="btn prev-btn" href="@Model.PreviousPage">Previous Page</a>   
    }
    <a class="btn nxt-btn" href="@Model.NextPage">Next Page</a>
</section>
